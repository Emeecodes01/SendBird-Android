<resources>
    <style name="AppThemeCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_300</item>
        <item name="colorPrimaryDark">@color/primary_500</item>
        <item name="colorAccent">@color/secondary_300</item>
    </style>

    <style name="SendBird.Custom" parent="AppThemeCustom">
        <!-- Channel list -->
        <item name="sb_channel_preview_style">@style/Widget.SendBird.ChannelPreview.Custom</item>

        <!-- Create channel, Invite channel, Member list -->
        <item name="sb_user_preview_style">@style/Widget.SendBird.UserPreview.Custom</item>

        <!-- Channel setting -->
        <item name="sb_channel_settings_style">@style/Widget.SendBird.ChannelSettings.Custom</item>

        <!-- Channel -->
        <item name="sb_channel_message_list_style">@style/Widget.SendBird.RecyclerView.Message.Custom</item>
        <item name="sb_message_user_style">@style/Widget.SendBird.Message.User.Custom</item>
        <item name="sb_message_file_style">@style/Widget.SendBird.Message.File.Custom</item>
        <item name="sb_message_admin_style">@style/Widget.SendBird.Message.Admin.Custom</item>
        <item name="sb_message_timeline_style">@style/Widget.SendBird.Message.Timeline.Custom</item>
        <item name="sb_message_input_style">@style/Widget.SendBird.MessageInput.Custom</item>

        <!-- Common components -->
        <item name="sb_appbar_style">@style/Widget.SendBird.AppBar.Custom</item>
        <item name="sb_recycler_view_style">@style/Widget.SendBird.RecyclerView.Custom</item>
        <item name="sb_dialog_view_style">@style/Widget.SendBird.DialogView.Custom</item>
        <item name="sb_status_frame_style">@style/Widget.SendBird.StatusFrame.Custom</item>
        <item name="sb_toast_view_style">@style/Widget.SendBird.ToastView.Custom</item>

        <!-- OpenChannel -->
        <item name="sb_open_channel_message_user_style">@style/Widget.SendBird.OpenChannel.Message.User.Custom</item>
        <item name="sb_open_channel_message_file_style">@style/Widget.SendBird.OpenChannel.Message.File.Custom</item>
        <item name="sb_open_channel_message_admin_style">@style/Widget.SendBird.OpenChannel.Message.Admin.Custom</item>
        <item name="sb_open_channel_settings_style">@style/Widget.SendBird.OpenChannel.ChannelSettings.Custom</item>
    </style>

    <style name="Widget.SendBird.AppBar.Custom">
        <item name="android:background">@color/primary_300</item>
        <item name="sb_appbar_title_appearance">@style/SendbirdH2OnDark01</item>
        <item name="sb_appbar_description_appearance">@style/SendbirdCaption2OnDark02</item>
        <item name="sb_appbar_divider_color">@color/primary_500</item>

        <item name="sb_appbar_left_button_text_appearance">@style/SendbirdButtonOnDark01</item>
        <item name="sb_appbar_left_button_text_color">@color/selector_on_primary</item>
        <item name="sb_appbar_left_button_tint">@color/ondark_01</item>
        <item name="sb_appbar_left_button_background">@drawable/sb_button_uncontained_background_custom</item>
        <item name="sb_appbar_right_button_text_appearance">@style/SendbirdButtonOnDark01</item>
        <item name="sb_appbar_right_button_text_color">@color/selector_on_primary</item>
        <item name="sb_appbar_right_button_tint">@color/ondark_01</item>
        <item name="sb_appbar_right_button_background">@drawable/sb_button_uncontained_background_custom</item>
    </style>

    <style name="Widget.SendBird.RecyclerView.Custom">
        <item name="android:background">@color/background_50</item>
        <item name="sb_pager_recycler_view_use_divide_line">true</item>
        <item name="sb_pager_recycler_view_divide_line_color">@color/onlight_04</item>
        <item name="sb_pager_recycler_view_divide_line_height">@dimen/sb_size_1</item>
        <item name="sb_pager_recycler_view_divide_margin_left">0dp</item>
        <item name="sb_pager_recycler_view_divide_margin_right">0dp</item>
    </style>

    <style name="Widget.SendBird.ChannelPreview.Custom">
        <item name="android:background">@drawable/selector_rectangle_light</item>
        <item name="sb_channel_preview_title_appearance">@style/SendbirdSubtitle1OnLight01</item>
        <item name="sb_channel_preview_member_count_appearance">@style/SendbirdCaption1OnLight02</item>
        <item name="sb_channel_preview_updated_at_appearance">@style/SendbirdCaption2OnLight02</item>
        <item name="sb_channel_preview_unread_count_appearance">@style/SendbirdCaption1OnDark01</item>
        <item name="sb_channel_preview_last_message_appearance">@style/SendbirdBody3OnLight03</item>
    </style>

    <style name="Widget.SendBird.UserPreview.Custom">
        <item name="android:background">@drawable/selector_rectangle_light</item>
        <item name="sb_user_preview_nickname_appearance">@style/SendbirdSubtitle2OnLight01</item>
    </style>

    <style name="Widget.SendBird.RecyclerView.Message.Custom">
        <item name="sb_pager_recycler_view_use_divide_line">false</item>
        <item name="sb_message_recyclerview_background">@color/background_50</item>
        <item name="sb_message_recyclerview_tooltip_background">@drawable/selector_tooltip_background_light</item>
        <item name="sb_message_recyclerview_tooltip_textappearance">@style/SendbirdCaption1Primary300</item>
        <item name="sb_message_typing_indicator_textappearance">@style/SendbirdCaption1OnLight02</item>
    </style>

    <style name="Widget.SendBird.DialogView.Custom">
        <item name="sb_dialog_view_background">@drawable/sb_rounded_rectangle_light</item>
        <item name="sb_dialog_view_background_bottom">@drawable/sb_top_rounded_rectangle_light</item>
        <item name="sb_dialog_view_background_anchor">@drawable/layer_dialog_anchor_background_light</item>
        <item name="sb_dialog_view_title_appearance">@style/SendbirdH1OnLight01</item>
        <item name="sb_dialog_view_message_appearance">@style/SendbirdSubtitle2OnLight01</item>
        <item name="sb_dialog_view_list_item_appearance">@style/SendbirdSubtitle2OnLight01</item>
        <item name="sb_dialog_view_list_item_background">@drawable/selector_rectangle_light</item>
        <item name="sb_dialog_view_edit_text_appearance">@style/SendbirdSubtitle2OnLight01</item>
        <item name="sb_dialog_view_edit_text_tint">@color/primary_300</item>
        <item name="sb_dialog_view_edit_text_cursor_drawable">@drawable/sb_message_input_cursor_light</item>
        <item name="sb_dialog_view_edit_text_hint_color">@color/onlight_03</item>
        <item name="sb_dialog_view_icon_tint">@color/primary_300</item>
    </style>

    <style name="Widget.SendBird.StatusFrame.Custom">
        <item name="sb_status_frame_background">@color/background_50</item>
        <item name="sb_status_frame_text_appearance">@style/SendbirdBody3OnLight03</item>
        <item name="sb_status_frame_icon_tint">@color/onlight_03</item>
        <item name="sb_status_frame_action_text_appearance">@style/SendbirdButtonPrimary300</item>
        <item name="sb_status_frame_action_background">@drawable/selector_button_retry_light</item>
    </style>

    <style name="Widget.SendBird.ChannelSettings.Custom">
        <item name="sb_channel_settings_background">@color/background_50</item>
        <item name="sb_channel_settings_item_background">@drawable/selector_rectangle_light</item>
        <item name="sb_channel_settings_name_appearance">@style/SendbirdSubtitle1OnLight01</item>
        <item name="sb_channel_settings_item_appearance">@style/SendbirdSubtitle2OnLight01</item>
    </style>

    <style name="Widget.SendBird.ToastView.Custom">
        <item name="sb_toast_background">@drawable/sb_toast_background_light</item>
        <item name="sb_toast_text_appearance">@style/SendbirdBody3OnDark01</item>
    </style>

    <style name="Widget.SendBird.MessageInput.Custom">
        <item name="sb_message_input_background">@color/background_50</item>
        <item name="sb_message_input_text_background">@drawable/sb_message_input_text_background_light</item>
        <item name="sb_message_input_text_appearance">@style/SendbirdBody3OnLight01</item>
        <item name="sb_message_input_text_hint_color">@drawable/selector_message_input_hint_text_color</item>
        <item name="sb_message_input_text_cursor_drawable">@drawable/sb_message_input_cursor_light</item>
        <item name="sb_message_input_enable">true</item>

        <item name="sb_message_input_left_button_tint">@color/primary_300</item>
        <item name="sb_message_input_right_button_tint">@color/secondary_400</item>
    </style>

    <!-- Message -->
    <style name="Widget.SendBird.Message.User.Custom">
        <item name="sb_message_time_text_appearance">@style/SendbirdCaption4OnLight03</item>
        <item name="sb_message_sender_name_text_appearance">@style/SendbirdCaption1OnLight02</item>
        <item name="sb_message_me_text_appearance">@style/SendbirdBody3OnDark01</item>
        <item name="sb_message_other_text_appearance">@style/SendbirdBody3OnLight01</item>
        <item name="sb_message_me_background">@drawable/sb_shape_chat_bubble</item>
        <item name="sb_message_other_background">@drawable/sb_shape_chat_bubble</item>
        <item name="sb_message_me_background_tint">@color/sb_message_me_tint_light</item>
        <item name="sb_message_other_background_tint">@color/sb_message_other_tint_light</item>
    </style>

    <style name="Widget.SendBird.Message.File.Custom">
        <item name="sb_message_time_text_appearance">@style/SendbirdCaption4OnLight03</item>
        <item name="sb_message_sender_name_text_appearance">@style/SendbirdCaption1OnLight02</item>
        <item name="sb_message_me_text_appearance">@style/SendbirdBody3OnDark01</item>
        <item name="sb_message_other_text_appearance">@style/SendbirdBody3OnLight01</item>
        <item name="sb_message_me_background">@drawable/sb_shape_chat_bubble</item>
        <item name="sb_message_other_background">@drawable/sb_shape_chat_bubble</item>
        <item name="sb_message_me_background_tint">@color/sb_message_me_tint_light</item>
        <item name="sb_message_other_background_tint">@color/sb_message_other_tint_light</item>
    </style>

    <style name="Widget.SendBird.Message.Admin.Custom">
        <item name="sb_admin_message_text_appearance">@style/SendbirdCaption2OnLight02</item>
        <item name="sb_admin_message_background">@android:color/transparent</item>
    </style>

    <style name="Widget.SendBird.Message.Timeline.Custom">
        <item name="sb_message_timeline_text_appearance">@style/SendbirdCaption1OnDark01</item>
        <item name="sb_message_timeline_background">@drawable/sb_shape_timeline_background</item>
    </style>

    <!-- OpenChannel -->
    <style name="Widget.SendBird.OpenChannel"/>

    <style name="Widget.SendBird.OpenChannel.Message">
        <item name="sb_message_time_text_appearance">@style/SendbirdCaption4OnLight03</item>
        <item name="sb_message_sender_name_text_appearance">@style/SendbirdCaption1OnLight02</item>
        <item name="sb_message_operator_name_text_appearance">@style/SendbirdCaption1Primary300</item>
    </style>

    <style name="Widget.SendBird.OpenChannel.Message.User.Custom">
        <item name="sb_message_background">@drawable/selector_rectangle_light</item>
        <item name="sb_message_text_appearance">@style/SendbirdBody3OnLight01</item>
    </style>

    <style name="Widget.SendBird.OpenChannel.Message.File.Custom">
        <item name="sb_message_text_appearance">@style/SendbirdBody3OnLight01</item>
        <item name="sb_message_background">@drawable/selector_open_channel_message_bg_light</item>
    </style>

    <style name="Widget.SendBird.OpenChannel.Message.Admin.Custom">
        <item name="sb_admin_message_text_appearance">@style/SendbirdCaption2OnLight02</item>
        <item name="sb_admin_message_background">@drawable/sb_shape_admin_message_background_light</item>
    </style>

    <style name="Widget.SendBird.OpenChannel.ChannelSettings.Custom">
        <item name="sb_channel_settings_background">@color/background_50</item>
        <item name="sb_channel_settings_item_background">@drawable/selector_rectangle_light</item>
        <item name="sb_channel_settings_name_appearance">@style/SendbirdSubtitle1OnLight01</item>
        <item name="sb_channel_settings_item_appearance">@style/SendbirdSubtitle2OnLight01</item>
        <item name="sb_channel_settings_description_appearance">@style/SendbirdBody2OnLight02</item>
        <item name="sb_channel_information_title_appearance">@style/SendbirdBody2OnLight02</item>
        <item name="sb_channel_information_content_appearance">@style/SendbirdBody3OnLight01</item>
    </style>
</resources>
