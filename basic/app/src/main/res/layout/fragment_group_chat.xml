<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_group_chat_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_group_chat_chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FCFBF9"
        android:minHeight="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/edittext_group_chat_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="11dp"
            android:layout_weight="1"
            android:background="@drawable/ic_message_edit"
            android:hint="@string/write_a_reply"
            android:maxLines="6"
            android:textColorHint="#4D434958"
            android:paddingVertical="10dp"
            android:paddingStart="47dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_group_chat_send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_group_chat_upload"
            android:layout_width="14dp"
            android:layout_height="20dp"
            android:layout_marginEnd="22dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/upload_file"
            app:layout_constraintBottom_toBottomOf="@id/edittext_group_chat_message"
            app:layout_constraintEnd_toEndOf="@id/edittext_group_chat_message"
            app:layout_constraintTop_toTopOf="@id/edittext_group_chat_message"
            app:srcCompat="@drawable/ic_attach" />

        <Button
            android:id="@+id/button_group_chat_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="21dp"
            android:background="@drawable/ic_voice"
            android:gravity="center"
            android:textColor="@drawable/selector_btn_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/layout_group_chat_chatbox"
        android:background="#DfDfDf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_group_chat_chatbox"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_group_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingHorizontal="20dp"
            android:paddingVertical="7dp"
            android:paddingBottom="4dp"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/layout_group_chat_current_event"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_group_chat_current_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Terry and Harry are typing" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>




