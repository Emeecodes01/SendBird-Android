<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <com.ulesson.chat.utils.CustomFontTextView
        android:id="@+id/text_group_chat_date"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/group_chat_date_background"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="February 22"
        android:textColor="@color/groupChatDateText"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_group_chat_file_thumbnail"
        android:layout_width="228dp"
        android:layout_height="148dp"
        android:layout_below="@id/text_group_chat_date"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/message_status_group_chat"
        android:adjustViewBounds="true"
        android:background="@drawable/me_message_shape"
        android:padding="2dp"
        android:scaleType="center" />

    <com.ulesson.chat.utils.CustomFontTextView
        android:id="@+id/text_group_chat_time"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_group_chat_file_thumbnail"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/image_group_chat_file_thumbnail"
        android:text="21:27"
        android:textColor="#8e8e8e"
        android:textSize="10sp"
        android:visibility="gone" />

    <com.ulesson.chat.widget.MessageStatusView
        android:id="@+id/message_status_group_chat"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_group_chat_file_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp" />

</RelativeLayout>
