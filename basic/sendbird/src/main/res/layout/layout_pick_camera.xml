<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ulesson.chat.utils.CustomFontTextView
        android:id="@+id/bt_camera"
        android:layout_width="wrap_content"

        android:layout_height="50dp"
        android:layout_marginVertical="26dp"
        android:drawableStart="@drawable/ic_camera"
        android:drawableLeft="@drawable/ic_camera"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:letterSpacing="0.125"
        android:lineSpacingExtra="1sp"
        android:paddingVertical="10dp"
        android:text="@string/camera"
        android:textAllCaps="true"
        android:textColor="#313848"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bt_gallery"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Camera" />

    <com.ulesson.chat.utils.CustomFontTextView
        android:id="@+id/bt_gallery"
        android:layout_width="wrap_content"

        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:drawableStart="@drawable/ic_gallery"
        android:drawableLeft="@drawable/ic_gallery"
        android:gravity="center"
        android:letterSpacing="0.125"
        android:lineSpacingExtra="1sp"
        android:paddingVertical="10dp"
        android:text="@string/gallery"
        android:textAllCaps="true"
        android:textColor="#313848"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/bt_camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/bt_camera"
        tools:text="Gallery" />

</androidx.constraintlayout.widget.ConstraintLayout>
