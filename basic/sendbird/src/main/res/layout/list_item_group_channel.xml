<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/shape_white_rounded"
    android:clickable="true"
    android:focusable="true">

    <com.ulesson.chat.utils.CustomFontTextView
        android:id="@+id/text_group_channel_list_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="15dp"
        android:alpha="0.5"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#313848"
        android:textSize="14sp"
        app:fontName="MuliRegular"
        app:layout_constraintEnd_toStartOf="@id/text_group_channel_list_unread_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Use logarithms to solve the equation of a line bisecting a circle of radi..." />

    <com.ulesson.chat.utils.CustomFontTextView
        android:id="@+id/text_group_channel_list_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:alpha="0.9"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="Mathematics"
        android:textAllCaps="true"
        android:textColor="#313848"
        android:textSize="12sp"
        app:fontName="MuliRegular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/container_group_channel_list_typing_indicator"
        app:layout_constraintStart_toEndOf="@id/subjectIcon"
        app:layout_constraintTop_toBottomOf="@id/text_group_channel_list_message" />

    <include
        android:id="@+id/container_group_channel_list_typing_indicator"
        layout="@layout/layout_typing_indicator"
        android:layout_width="32dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/text_group_channel_list_date"
        app:layout_constraintEnd_toStartOf="@id/text_group_channel_list_date"
        app:layout_constraintTop_toTopOf="@id/text_group_channel_list_date" />

    <com.ulesson.chat.utils.CustomFontTextView
        android:id="@+id/text_group_channel_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="11dp"
        android:alpha="0.5"
        android:maxLines="1"
        android:text="11:45"
        android:textColor="#313848"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/subjectIcon"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintBottom_toBottomOf="@id/text_group_channel_list_subject"
        app:layout_constraintStart_toStartOf="@id/text_group_channel_list_message"
        app:layout_constraintTop_toTopOf="@id/text_group_channel_list_subject"
        app:srcCompat="@drawable/ic_subject_icon" />

    <com.ulesson.chat.utils.CustomFontTextView
        android:id="@+id/text_group_channel_list_unread_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/ic_unread_bg"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/groupChannelUnreadCountText"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/text_group_channel_list_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_group_channel_list_message"
        app:layout_constraintVertical_bias="0.5"
        tools:text="1" />


</androidx.constraintlayout.widget.ConstraintLayout>