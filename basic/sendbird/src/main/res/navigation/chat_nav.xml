<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_nav"
    app:startDestination="@id/groupChatFragment">

    <argument
        android:name="channelUrl"
        app:argType="string" />

    <argument
        android:name="sessionStart"
        app:argType="string"
        app:nullable="true" />

    <argument
        android:name="isActive"
        app:argType="boolean"
        android:defaultValue="true" />

    <fragment
        android:id="@+id/groupChatFragment"
        android:name="com.sendbird.android.sample.groupchannel.GroupChatFragment"
        tools:layout="@layout/fragment_group_chat"
        android:label="GroupChatFragment">
        <action
            android:id="@+id/action_nav_graph_to_chatEndSessionFragment"
            app:destination="@id/chatEndSessionFragment" />
        <argument
            android:name="channelUrl"
            app:argType="string" />
        <argument
            android:name="sessionStart"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="isActive"
            app:argType="boolean"/>
    </fragment>


    <fragment
        android:id="@+id/chatEndSessionFragment"
        android:name="com.sendbird.android.sample.groupchannel.endsession.ChatEndSessionFragment"
        android:label="ChatEndSessionFragment"
        tools:layout="@layout/fragment_chat_session_ended">

    </fragment>


</navigation>